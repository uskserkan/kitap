@model Kitabim.Models.Book

@{
    ViewData["Title"] = "Ürün Detayları";
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title">
    </div>
    <div class="col-md-8">
        <p><strong>Yazar:</strong> @Model.Author</p>
        <p><strong>Tür:</strong> @Model.Genre</p>
        <p><strong>Yayınevi:</strong> @Model.Publisher</p>
        <p><strong>Fiyat:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Stok:</strong> @Model.Stock</p>
        <br>
        <a href="/Cart/AddToCart?bookId=@Model.Id" class="btn btn-success">Sepete Ekle</a>
    </div>
</div>

