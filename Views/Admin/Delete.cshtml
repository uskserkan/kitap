@model Kitabim.Models.Book

@{
    ViewData["Title"] = "Kitabı Sil";
}

<h2>Kitabı Sil</h2>

<p>Bu kitabı silmek istediğinizden emin misiniz?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> 
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label"></label>
        <input asp-for="Author" class="form-control" readonly />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Products" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>


